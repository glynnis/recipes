= link_to 'Create new recipe', new_recipe_path

%h1 All Recipes

%table
  %tr
    %th Name
    %th Yield
    %th Level
    %th Prep Time
    %th Cook Time
    %th Steps
    %th Source

  - @recipes.each do |recipe|
    %tr
      %td= recipe.name
      %td= recipe.yield
      %td= recipe.level
      %td= recipe.prep_time
      %td= recipe.cook_time
      %td= recipe.steps
      %td= recipe.source
      %td= link_to 'Show', recipe
      %td= link_to 'Edit', edit_recipe_path(recipe)
      %td= button_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }
