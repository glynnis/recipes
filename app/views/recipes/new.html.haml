%h2 Create a new recipe
= form_for @recipe, url: recipes_path do |f|
  = f.label :name
  %br
  = f.text_field :name, :autofocus => true
  %br
  %br
  = f.label :yield
  %br
  = f.text_field :yield, :autofocus => true
  %br
  %br
  = f.label :level
  %br
  = f.text_field :level, :autofocus => true
  %br
  %br
  = f.label :prep_time
  %br
  = f.text_field :prep_time, :autofocus => true
  %br
  %br
  = f.label :cook_time
  %br
  = f.text_field :cook_time, :autofocus => true
  %br
  %br
  = f.label :steps
  %br
  = f.text_area :steps, :autofocus => true
  %br
  %br
  = f.label :source
  %br
  = f.text_field :source, :autofocus => true
  %br
  %br
  = f.submit "Create Recipe"

= link_to 'Back', recipes_path
